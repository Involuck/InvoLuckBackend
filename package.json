{
  "name": "involuck-backend",
  "version": "1.0.0",
  "description": "Backend API for InvoLuck - Invoice Management System",
  "main": "dist/server.js",
  "type": "module",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "dev": "nodemon",
    "build": "tsc -p tsconfig.json --skipLibCheck && npm run copy-public",
    "copy-public": "node copy-public.js",
    "start": "node dist/server.js",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "lint:check": "eslint . --ext .ts --max-warnings 0",
    "lint:format": "npm run lint && npm run format",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "cross-env NODE_OPTIONS=\"--experimental-vm-modules --no-warnings\" jest",
    "test:watch": "cross-env NODE_OPTIONS=\"--experimental-vm-modules --no-warnings\" jest --watch",
    "test:coverage": "cross-env NODE_OPTIONS=\"--experimental-vm-modules --no-warnings\" jest --coverage",
    "test:ci": "cross-env NODE_OPTIONS=\"--experimental-vm-modules --no-warnings\" jest --ci --coverage --watchAll=false",
    "email:dev": "maizzle serve --config src/emails/maizzle/config.js",
    "email:build": "maizzle build production --config src/emails/maizzle/config.js --output src/emails/compiled",
    "seed": "tsx src/seeders/seed.ts",
    "prepare": "husky install",
    "typecheck": "tsc --noEmit -p tsconfig.json",
    "all": "npm run build && npm run typecheck && npm run lint && npm run test && npm run format"
  },
  "keywords": [
    "invoice",
    "management",
    "nodejs",
    "typescript",
    "express",
    "mongodb"
  ],
  "author": "InvoLuck Team",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^17.2.1",
    "express": "^4.21.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^8.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.18.0",
    "morgan": "^1.10.1",
    "nodemailer": "^7.0.5",
    "pino-http": "^8.6.1",
    "pino-pretty": "^10.3.1",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.27.1",
    "@eslint/js": "^9.32.0",
    "@maizzle/framework": "5.0.6",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.23",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/mongodb": "^4.0.6",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.19.11",
    "@types/nodemailer": "^6.4.14",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "autoprefixer": "^10.4.16",
    "cpy": "^12.0.1",
    "cross-env": "^10.0.0",
    "dotenv-cli": "^10.0.0",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-prettier": "^5.1.0",
    "fs-extra": "^11.3.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "mongodb-memory-server": "^10.2.0",
    "nodemon": "^3.0.2",
    "postcss": "^8.4.32",
    "prettier": "^3.6.2",
    "supertest": "^6.3.4",
    "tailwindcss": "^3.3.6",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
