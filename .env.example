# ===========================================
# InvoLuck Backend Environment Configuration
# ===========================================
# Copy this file to .env and update the values

# Application Configuration
# -------------------------
NODE_ENV=development
PORT=5000
APP_URL=http://localhost:5000

# Database Configuration
# ----------------------
# MongoDB connection string - use MongoDB Atlas or local instance
MONGODB_URI=mongodb://localhost:27017/involuck

# Authentication Configuration
# ----------------------------
# JWT secret key - CHANGE THIS IN PRODUCTION!
JWT_SECRET=super-secret-change-me-in-production-minimum-32-characters
JWT_EXPIRES_IN=7d

# CORS Configuration
# ------------------
# Frontend URL for CORS - comma separated for multiple origins
CORS_ORIGIN=http://localhost:3000

# Email Configuration (SMTP)
# --------------------------
# Use services like Gmail, SendGrid, Mailgun, etc.
# For development, you can use Mailtrap or MailHog
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=2525
SMTP_USER=your-smtp-username
SMTP_PASS=your-smtp-password
SMTP_FROM="InvoLuck <no-reply@involuck.dev>"

# Rate Limiting Configuration
# ---------------------------
# Time window in milliseconds (default: 15 minutes)
RATE_LIMIT_WINDOW_MS=900000
# Maximum requests per window per IP
RATE_LIMIT_MAX=100

# File Upload Configuration
# -------------------------
# Maximum file size in bytes (default: 5MB)
MAX_FILE_SIZE=5242880
# Allowed file extensions (comma separated)
ALLOWED_FILE_EXTENSIONS=.jpg,.jpeg,.png,.pdf,.doc,.docx

# Logging Configuration
# ---------------------
# Log level: trace, debug, info, warn, error, fatal
LOG_LEVEL=info

# Security Configuration
# ----------------------
# Enable/disable security headers
SECURITY_HEADERS=true

# Development Configuration
# -------------------------
# Enable development features
DEV_MODE=true
# Enable API documentation
ENABLE_API_DOCS=true
