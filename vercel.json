{
  "version": 2,
  "builds": [
    {
      "src": "src/server.ts",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/public/(.*)",
      "dest": "/public/$1"
    },
    {
      "src": "/styles.css",
      "dest": "/public/styles.css"
    },
    {
      "src": "/(.*)",
      "dest": "/src/server.ts"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "PORT": "5000",
    "APP_URL": "https://involuck-backend.vercel.app",
    "MONGODB_URI": "mongodb+srv://placeholder:placeholder@cluster0.mongodb.net/involuck",
    "JWT_SECRET": "super-secure-jwt-secret-key-for-production-environment",
    "JWT_EXPIRES_IN": "7d",
    "CORS_ORIGIN": "https://involuck.vercel.app",
    "SMTP_HOST": "smtp.sendgrid.net",
    "SMTP_PORT": "587",
    "SMTP_USER": "apikey",
    "SMTP_PASS": "placeholder-smtp-password",
    "SMTP_FROM": "no-reply@involuck.dev",
    "RATE_LIMIT_WINDOW_MS": "900000",
    "RATE_LIMIT_MAX": "100",
    "MAX_FILE_SIZE": "5242880",
    "ALLOWED_FILE_EXTENSIONS": ".jpg,.jpeg,.png,.pdf,.doc,.docx",
    "LOG_LEVEL": "info",
    "SECURITY_HEADERS": "true",
    "ENABLE_API_DOCS": "true"
  }
}
